@model piquota.Models.Movie
@*@using piquota.Class;*@
<style>
    body {
        background-color: #FFF;
    }

    #apiDiv {
        padding-left: 20px;
        display: inline-block;
        width: 95%;
        text-align: justify;
    }

        #apiDiv h4 {
            margin: 10px 0;
        }

        #apiDiv .biography img {
            float: left;
            padding-right: 10px;
        }

        #apiDiv .return {
            text-align: center;
        }

            #apiDiv .return a {
                color: #00e8ff;
                font-size: 20px;
                text-decoration: underline;
            }
</style>

<div id="apiDiv">
    <div class="return"><a href="@Url.Action("Index", "Movie")">Return</a></div>
    <h4>@Model.title</h4>
    <img src="@Model.poster_path" />
    <p class="Overview">@Model.overview</p>
    <p>Popularity: @Model.popularity</p>
    <p>Runtime: @Model.runtime</p>
    <p>release_date: @Model.release_date</p>

    @foreach (var n in Model.genres)
    {
        <p>genre: @n.name</p>

    }
    @foreach (var item in Model.production_companies)
    {
        <p>production_company: @item.name</p>
        <p>origin_country: @item.origin_country</p>

    }

</div>